{if $position === 'tab'}<div class="twer-gotopro-blank-tab"></div>{/if}
<div class="twer-gotopro {$class}">
    <div class="twer-gotopro__message">
        <div class="twer-gotopro__message__icon"><img src="{$icon}" alt=""></div>
        <div class="twer-gotopro__message__title">{$title}</div>
        <div class="twer-gotopro__message__description"><p>{$description}</p></div>
        <a href="{$link['url']}" class="twer-gotopro__message__link" title="{$link['title']}">{$link['title']}</a>
    </div>
</div>
